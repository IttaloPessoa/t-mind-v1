<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/default_margin"
        android:scrollbars="none|vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <br.com.ufpb.ittalopessoa.t_mind.util.RobotoMedium
                android:id="@+id/title_exer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Com base no exemplo a seguir, qual serÃ¡ o valor final armazenado em resultado?"
                android:textColor="@color/md_text"
                android:textSize="@dimen/fontsize_title" />

            <br.com.ufpb.ittalopessoa.t_mind.util.RobotoRegular
                android:id="@+id/subhead_exer3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:text="a = 1\nb = 6\nc = b + a\nd = a + b * c"
                android:textColor="@color/md_secondary_text_icons"
                android:textSize="@dimen/fontsize_subhead" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/inputlayout"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escreva aqui"
                android:id="@+id/entrada_exerc3"
                android:textColorHint="@color/md_secondary_text_icons"
                android:textColor="@color/md_text"
                android:textSize="@dimen/fontsize_subhead"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_exerc2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_button_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/raised_button_red"
            android:padding="8dp"
            android:text="Verficar"
            android:textAllCaps="true"
            android:textColor="@color/md_text_white" />

    </LinearLayout>

</LinearLayout>