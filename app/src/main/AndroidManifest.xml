<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.ufpb.ittalopessoa.t_mind">

    <application
        android:name=".TMindApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SlideActivity" />
        <activity android:name=".activities.LoginRegisterActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NavDrawer" />
        <activity android:name=".activities.LevelActivity" />
        <activity android:name=".activities.ExerciceActivity" />
        <activity
            android:name=".activities.RankingActivity"
            android:label="@string/title_activity_ranking"/>
    </application>

</manifest>